<%- include("../includes/head.ejs") %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
  </head>

  <body>
    <%- include("../includes/navigation.ejs") %>


      <main class="main">
        <% if(errorMessage) { %>
          <div class="user-message user-message--error">
            <%= errorMessage %>
          </div>
          <% } %>
            <div class="login-form">

              <form class="product-form" action="/login" method="POST" novalidate>
                <div class="form-control">
                  <label for="email">
                    <h2>E-mail</h2>
                  </label>
                  <input <input class="<%= validationErrors.find(e=>e.path === 'email')? 'invalid': '' %>" type="text"
                    name="email" id="email" value="<%= oldInput.email %>">
                </div>
                <div class="form-control">
                  <label for="password">
                    <h2>Password</h2>
                  </label>
                  <input <input class="<%= validationErrors.find(e=>e.path === 'password')? 'invalid': '' %>"
                    type="password" name="password" id="password" value="<%= oldInput.password %>">
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <button class="btn form_btn" type="submit">
                  Login
                </button>
              </form>
              <div class="centered">

                <a href="/reset">Forgot password?</a>
              </div>
            </div>
      </main>



      <%- include("../includes/end.ejs")%>