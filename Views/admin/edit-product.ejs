<%- include("../includes/head.ejs") %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  </head>

  <body>
    <%- include("../includes/navigation.ejs") %>


      <main class="main">
        <div class="product_form">

          <form class="product-form" action="/admin/<% if(editing){%>edit-product<%}else{%>add-product<% }%>"
            method="POST">
            <div class="form-control">
              <label for="title">
                <h2>Title</h2>
              </label>
              <input type="text" name="title" id="title" value="<%if(editing){ %> <%=product.title %> <%}%>">
            </div>
            <div class="form-control">
              <label for="imageUrl">
                <h2>Image Url</h2>
              </label>
              <input type="text" name="imageUrl" id="imageUrl" value="<%if(editing){ %> <%=product.imageUrl %> <%}%>">
            </div>
            <div class="form-control">
              <label for="price">
                <h2>Price</h2>
              </label>
              <input type="number" name="price" id="price" step="0.01"
                value="<%if(editing){ %><%= product.price%><%}%>">
            </div>
            <div class="form-control">
              <label for="description">
                <h2>Description</h2>
              </label>
              <textarea name="description" id="description" cols="5"
                rows="5"><%if(editing){%><%=product.description %><%}%></textarea>
            </div>
            <%if(editing) {%>
              <input type="hidden" value="<%= product._id%>" name="productId" />
              <%}%>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <button class="btn form_btn" type="submit">
                  <%if(editing){%>Update product<%}else{ %>Add Product<%}%>

                </button>
          </form>
        </div>
      </main>



      <%- include("../includes/end.ejs")%>